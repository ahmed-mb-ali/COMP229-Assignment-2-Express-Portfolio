<!--Header-->
<%- include ../partials/header.ejs %>

<!--Main nav-->
<%- include ../partials/main_nav_add_page.ejs %>


<!-- Content for the Add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"><br>
            <h1><%= title %></h1>

            <!--Add name of the contact-->
            <form  class="form" method="POST"><br>
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Name"
                    name= "name" required>
                </div>
                
                <!--Add contact number -->
                <div class="form-group">
                    <label for="authorTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter Contact"
                    name= "number" required>
                </div>

                <!--Add email address-->
                <div class="form-group">
                    <label for="publishedTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter Email"
                    name= "email" required>
                </div>

                <!--Submit button-->
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit">Submit</i></button>

                <!--Cancel button and redirect to the business contact page-->
                <a href="/business_contacts-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>
                

            </form>
        </div>
        
    </div>
</div>  




<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>
 